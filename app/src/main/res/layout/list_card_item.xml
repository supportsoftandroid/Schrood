<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="modal"
            type="com.food.schrood.model.CardData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@color/colorWhite"
        android:elevation="@dimen/dp_2"
        android:paddingHorizontal="@dimen/dp_5"
        android:paddingVertical="@dimen/dp_10"
        android:shadowRadius="5">

        <TextView
            android:id="@+id/imgCard"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/circle_white"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="@string/app_name"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:padding="@dimen/dp_2"
            android:text="Master Card"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/dummy_name"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@+id/llLeft"
            app:layout_constraintStart_toEndOf="@+id/imgCard"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:text="@string/delete"
                android:textColor="@color/app_color"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtName" />

            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:tint="@color/colorBlack"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                android:layout_gravity="center"


                android:src="@drawable/ic_chevron_right_24"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtName" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvCardNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="4181-XXXXXXXX-0011"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@+id/llLeft"
            app:layout_constraintStart_toEndOf="@+id/imgCard"
            app:layout_constraintTop_toBottomOf="@+id/txtName"

            />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLightGray"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCardNo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clvAddCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1">

            <ImageView
                android:id="@+id/imgAdd"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/circle_white"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:text="@string/add_a_new_card"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgAdd"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_15"
                app:tint="@color/colorBlack"

                android:src="@drawable/ic_chevron_right_24"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
