<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="modal"
            type="com.food.schrood.model.CommonDataItem" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"

         >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:textColor="@color/color2E3034"
            android:gravity="start"
            android:maxLines="2"
            android:text="Dunkin Donuts Ambarukmo P.."

            android:layout_marginEnd="@dimen/dp_15"
            android:textSize="@dimen/sp_14"

            app:layout_constraintStart_toEndOf="@+id/imgNext"
            app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="@dimen/dp_10"

            android:includeFontPadding="false"
            android:textColor="@color/color747D8C"
            android:gravity="start"
            android:text="Get 10% off with more contents go hereGet 10% off with more contents go here"
            android:layout_marginEnd="@dimen/dp_80"
            android:textSize="@dimen/sp_12"

            app:layout_constraintEnd_toStartOf="@+id/imgNext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgNext"
            app:tint="@color/colorText"
            android:visibility="gone"

            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/ic_chevron_right_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/view1"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/colorLightGray"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
