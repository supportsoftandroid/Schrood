<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="modal"
            type="com.food.schrood.model.CommonDataItem" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15">

        <ImageView
            android:id="@+id/imgBar"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_70"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/address_map"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start|center_vertical"

            android:text="Delivery Address"
            android:textColor="@color/colorTextHint"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toStartOf="@+id/imgEdit"
            app:layout_constraintStart_toEndOf="@id/imgBar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_5"
            android:padding="@dimen/dp_2"
            android:src="@drawable/ic_edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start|center_vertical"
            android:text="Gedongan Kotgaede, Yogyakarta 55173."
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toStartOf="@+id/imgEdit"
            app:layout_constraintStart_toEndOf="@id/imgBar"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
              />

        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:visibility="gone"

            android:fontFamily="@font/poppins_medium"
            android:gravity="start|center_vertical"
            android:text="215 468 62493"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toStartOf="@+id/imgEdit"
            app:layout_constraintStart_toEndOf="@id/imgBar"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress"
             />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLightGray"
            app:layout_constraintTop_toBottomOf="@+id/imgBar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
