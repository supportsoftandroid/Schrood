<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="modal"
            type="com.food.schrood.model.CommonDataItem" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"

        app:cardCornerRadius="@dimen/dp_7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/viewBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="start"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:cardCornerRadius="@dimen/dp_7">

                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_120"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/product_dummy" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="Pizza 4P"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"

                    android:text="Western Cuisine"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:id="@+id/tvRatting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginVertical="@dimen/dp_5"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="@dimen/dp_7"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="4.9 (284)"

                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:drawablePadding="@dimen/dp_7"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"

                    android:text="$20.99"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/circle_white"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_un_favorite" />

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_90"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/btn_background_gray_radius_5"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="@font/poppins_semi_bold"
                android:paddingHorizontal="@dimen/dp_15"
                android:text="Add"
                android:textAllCaps="true"

                android:textColor="@color/app_color"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>