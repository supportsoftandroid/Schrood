<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="modal"
            type="com.food.schrood.model.CommonDataItem" />

    </data>

<androidx.cardview.widget.CardView
    android:layout_width="@dimen/dp_120"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_7"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_10"

    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_gravity="center_horizontal"
        android:id="@+id/viewBody">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_7"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:contentDescription="@string/app_name"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/product_dummy"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitle"
                android:text="Pizza 4P"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:gravity="start"
                android:textSize="@dimen/sp_14"
                android:maxLines="1"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/colorText"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Western Cuisine"
            android:id="@+id/tvSubtitle"
            android:maxLines="1"
            android:layout_marginHorizontal="@dimen/dp_5"

            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/sp_12"
            /> 


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextHint"
            android:text="4.9 (284)"
            android:layout_marginHorizontal="@dimen/dp_5"
            android:drawableStart="@drawable/ic_star"
            android:id="@+id/tvRatting"
            android:layout_marginVertical="@dimen/dp_5"
            android:maxLines="1"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center_vertical"

            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/sp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="$20.99"
            android:layout_marginHorizontal="@dimen/dp_5"
            android:id="@+id/tvPrice"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center_vertical"

            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/sp_13"
            android:layout_marginBottom="@dimen/dp_5"
            />
    </LinearLayout>

        <ImageView
            android:id="@+id/imgFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/circle_white"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_un_favorite" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAdd"
            android:backgroundTint="@color/colorWhite"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_marginBottom="@dimen/dp_5"
            android:paddingHorizontal="@dimen/dp_15"
            android:layout_centerHorizontal="true"
            android:text="Add"
            android:textSize="@dimen/sp_12"
            android:textAllCaps="true"
            android:textColor="@color/app_color"

            android:layout_marginTop="@dimen/dp_90"
            android:background="@drawable/btn_background_gray_radius_5"
            />
    </RelativeLayout> 
</androidx.cardview.widget.CardView>
</layout>