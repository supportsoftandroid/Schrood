<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="modal"
            type="com.food.schrood.model.MessageItem" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relative_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_45"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="@dimen/dp_15">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:autoLink="all"
                    android:background="@drawable/send_msg_right_bg"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="end"
                    android:paddingHorizontal="@dimen/dp_5"
                    android:paddingVertical="@dimen/dp_15"
                    android:text="Yes boss, I reached on the time and right cleaning boardroom."
                    android:textColor="@color/colorWhite"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/sp_14" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImage"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:maxHeight="@dimen/dp_150"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_loading" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvChatTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Today, 11:31 am"
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</layout>